{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/oidoid/void/refs/heads/main/schema/config-file.v0.json",
  "title": "void Config File Schema",
  "type": "object",
  "description": "a JSON representation of a void config file.",
  "$defs": {
    "Atlas": {
      "type": "object",
      "description": "sprite sheet config.",
      "required": ["dir", "image"],
      "properties": {
        "dir": {
          "type": "string",
          "description": "Aseprite asset root directory. all `**.aseprite` files are input.",
          "examples": ["src/assets/atlas/", "./"]
        },
        "image": {
          "type": "string",
          "description": "sprite sheet image output.",
          "examples": ["dist/public/atlas.webp", "atlas.png"]
        }
      }
    },
    "RGBA": {
      "type": "string",
      "description": "color (red, green, blue, alpha) in hex.",
      "pattern": "^[A-Fa-f0-9]{8}$",
      "default": 0,
      "examples": ["01234567"]
    },
    "WH": {
      "type": "object",
      "description": "area.",
      "properties": {
        "w": {"type": "integer", "description": "width.", "default": 0},
        "h": {"type": "integer", "description": "height.", "default": 0}
      }
    }
  },
  "required": ["out"],
  "unevaluatedProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "the configuration schema URI.",
      "default": "https://raw.githubusercontent.com/oidoid/void/refs/heads/main/schema/config-file.v0.json"
    },
    "entry": {
      "type": "string",
      "default": "src/assets/index.html",
      "description": "HTML entrypoint input. the file should include a script tag sourcing the TypeScript / JavaScript entrypoint."
    },
    "meta": {
      "type": "string",
      "default": "dist/meta.json",
      "description": "esbuild bundle metadata file output."
    },
    "out": {
      "type": "object",
      "description": "output config.",
      "required": ["game"],
      "unevaluatedProperties": false,
      "properties": {
        "dir": {
          "type": "string",
          "description": "HTML and JavaScript output directory.",
          "default": "dist/public/"
        },
        "game": {
          "type": "string",
          "description": "game config output.",
          "examples": ["src/assets/game.json", "game.json"]
        },
        "name": {
          "type": "string",
          "description": "HTML output file stem when watch is disabled. defaults to entry.",
          "examples": ["index", "super-patience"]
        }
      }
    },
    "preloadAtlas": {"$ref": "#/$defs/Atlas", "unevaluatedProperties": false},
    "init": {
      "type": "object",
      "description": "init config.",
      "unevaluatedProperties": false,
      "properties": {
        "background": {
          "$ref": "#/$defs/RGBA",
          "description": "render clear color. defaults to canvas parent background color."
        },
        "input": {
          "enum": ["Custom", "Default"],
          "description": "button mapping. default to init all default buttons, custom to leave all unmapped. to-do: support mapping here",
          "default": "Default"
        },
        "minWH": {
          "$ref": "#/$defs/WH",
          "description": "min cam dimensions. zero is infinity (always use min scale).",
          "unevaluatedProperties": false
        },
        "minScale": {
          "type": "integer",
          "description": "min cam scale.",
          "default": 1,
          "minimum": 1
        },
        "mode": {
          "enum": ["Float", "Int"],
          "description": "use fractional or integral rendering.",
          "default": "Int"
        },
        "zoomOut": {
          "type": "number",
          "description": "cam zoom offset.",
          "default": 0,
          "minimum": 0
        }
      }
    }
  }
}
