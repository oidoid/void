{
  "extends": "./base-tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "isolatedDeclarations": false, // incompatible with allowJS.

    "noEmit": true, // tsc is only used for type-checking.

    "lib": ["ES2023"],

    "rootDir": "..",

    "tsBuildInfoFile": "../dist/tools/tsconfig.tsbuildinfo",

    "types": ["node"]
  },
  "include": ["**/*", "../package.json"],
  "references": [{"path": "../src"}]
}
