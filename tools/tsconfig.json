// TypeScript config for all tools.
{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "types": ["node"]
  },
  "include": [
    "${configDir}/",
    "${configDir}/**/*.json",
    "../schema/",
    "../schema/**/*.json",
    "../package.json"
  ],
  "exclude": [
    "${configDir}/**/*.test.*",
    "${configDir}/**/test/",
    "../schema/**/*.test.*",
    "../schema/**/test/"
  ],
  "references": [{"path": "../src"}]
}
