{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "Clock": {"type": "object", "description": "clock config."},
    "Ent": {
      "allOf": [
        {"$ref": "level-file.v0.json#/$defs/Ent"},
        {
          "type": "object",
          "properties": {
            "clock": {"$ref": "#/$defs/Clock", "unevaluatedProperties": false},
            "renderToggle": {
              "$ref": "#/$defs/RenderToggle",
              "unevaluatedProperties": false
            },
            "rotate": {
              "$ref": "#/$defs/Rotate",
              "unevaluatedProperties": false
            },
            "tally": {"$ref": "#/$defs/Tally", "unevaluatedProperties": false},
            "superball": {
              "$ref": "#/$defs/Superball",
              "unevaluatedProperties": false
            },
            "superballButton": {
              "$ref": "#/$defs/SuperballButton",
              "unevaluatedProperties": false
            }
          }
        }
      ]
    },
    "RenderToggle": {"type": "object", "description": "render toggle config."},
    "Rotate": {
      "type": "object",
      "description": "rotate config.",
      "required": ["speed"],
      "properties": {
        "speed": {
          "type": "number",
          "description": "rotation speed in degrees per second."
        }
      }
    },
    "Tally": {"type": "object", "description": "tally config."},
    "Superball": {"type": "object", "description": "superball config."},
    "SuperballButton": {
      "type": "object",
      "description": "superball button config."
    }
  }
}
