// TypeScript config for demo.
{
  "extends": "../../tools/tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.AsyncIterable",
      "DOM.Iterable",
      "ES2024",
      "ESNext.disposable"
    ],

    "rewriteRelativeImportExtensions": true, // rewrite .ts imports to .js.

    "outDir": "../../dist/demo", // output to dist/demo.

    "tsBuildInfoFile": "../../dist/demo/tsconfig.tsbuildinfo",

    "customConditions": ["browser"]
  },
  // https://github.com/Microsoft/TypeScript/issues/25636
  "include": ["**/*", "**/*.json"],
  "exclude": ["**/*.test.ts"],
  "references": [{"path": ".."}]
}
