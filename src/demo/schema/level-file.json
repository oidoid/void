{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/oidoid/void/refs/heads/main/src/demo/schema/level-file.json",
  "allOf": [{"$ref": "../../../schema/level-file.v0.json"}],
  "$defs": {
    "Clock": {"const": true, "description": "clock config."},
    "Ent": {
      "allOf": [
        {"$ref": "../../../schema/level-file.v0.json#/$defs/Ent"},
        {
          "type": "object",
          "properties": {
            "clock": {"$ref": "#/$defs/Clock", "unevaluatedProperties": false},
            "renderToggle": {
              "$ref": "#/$defs/RenderToggle",
              "unevaluatedProperties": false
            },
            "tally": {"$ref": "#/$defs/Tally", "unevaluatedProperties": false}
          }
        }
      ],
      "$comment": "to-do: `\"$dynamicAnchor\": \"Ent\"`."
    },
    "Pool": {
      "$ref": "../../../schema/level-file.v0.json#/$defs/Pool",
      "enum": ["Default", "Overlay"],
      "$comment": "to-do: `\"$dynamicAnchor\": \"Pool\"`."
    },
    "RenderToggle": {"const": true, "description": "render toggle config."},
    "Tag": {
      "$ref": "../../../schema/level-file.v0.json#/$defs/Tag",
      "$comment": "to-do: `\"$dynamicAnchor\": \"Tag\"` and populate tags from tools/void.ts."
    },
    "Tally": {"const": true, "description": "tally config."}
  },
  "unevaluatedProperties": false,
  "properties": {
    "ents": {
      "allOf": [
        {"$ref": "../../../schema/level-file.v0.json#/properties/ents"}
      ],
      "items": {
        "$dynamicRef": "#Ent",
        "$ref": "#/$defs/Ent",
        "$comment": "to-do: delete root properties once dynamic refs are supported.",
        "unevaluatedProperties": false
      }
    }
  }
}
