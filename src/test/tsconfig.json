// TypeScript config for test code under src/**/*.test.ts and src/test/**/*.
{
  "extends": "../../tools/tsconfig-base.json",
  "compilerOptions": {
    "lib": ["ES2024", "ESNext.disposable", "DOM"],

    "noEmit": true, // tsc is only used for type-checking.

    "types": ["node"]
  },
  "include": [
    "${configDir}/",
    "${configDir}/**/*.json",
    "../../**/*.test.ts",
    "../../**/*.test*.json",
    "../../**/test/",
    "../../**/test/**/*.json"
  ],
  "exclude": ["../../node_modules/", "../../dist/"],
  "references": [
    {"path": "../"},
    {"path": "../demo/"},
    {"path": "../../tools/"}
  ]
}
