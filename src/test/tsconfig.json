// TypeScript config for test and perf test code.
{
  "extends": "@oidoid/config/tsconfig",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.AsyncIterable",
      "DOM.Iterable",
      "ES2023",
      "ESNext.disposable"
    ],

    "types": ["node"],

    "outDir": "../../dist/",
    "rootDir": "../../"
  },
  "include": [
    "${configDir}/",
    "${configDir}/**/*.json",
    "../../**/*.test.ts",
    "../../**/*.test.json",
    "../../**/test/",
    "../../**/test/**/*.json"
  ],
  "exclude": ["../../node_modules/", "../../dist/"],
  "references": [
    {"path": "../"},
    {"path": "../demo/"},
    {"path": "../../tools/"}
  ]
}
