// TypeScript config for test code under src/**/*.test.ts and src/test/**/*.
{
  "extends": "../../tools/base-tsconfig.json",
  "compilerOptions": {
    "checkJs": true,

    "lib": ["DOM", "ES2023"],

    // tsc is only used for type-checking.
    "noEmit": true,

    "rootDir": "..",

    "tsBuildInfoFile": "../../dist/test/tsconfig.tsbuildinfo"
  },
  "include": ["**/*", "../**/*.test.ts"],
  "references": [{"path": ".."}]
}
