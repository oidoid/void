// TypeScript config for test code.
{
  "extends": "@oidoid/config/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ES2023", "ESNext.disposable"],

    "types": ["node"],

    "outDir": "../../dist/",
    "rootDir": "../../"
  },
  "include": [
    "${configDir}/",
    "${configDir}/**/*.json",
    "../**/*.test.ts",
    "../**/*.test.json",
    "../**/test/",
    "../**/test/**/*.json"
  ],
  "exclude": ["${configDir}/node_modules/", "${configDir}/dist/"],
  "references": [
    {"path": "../cli/"},
    {"path": "../demo/"},
    {"path": "../engine/"}
  ]
}
