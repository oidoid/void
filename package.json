{
  "author": "Stephen Niedzielski <stephen@oidoid.com> (https://oidoid.com)",
  "bin": {
    "void": "tools/void.ts"
  },
  "bugs": "https://github.com/oidoid/void/issues",
  "dependencies": {
    "@biomejs/biome": "2.2.4",
    "esbuild": "0.25.10",
    "jsdom": "27.0.0",
    "mem-font": "11.0.0-5"
  },
  "description": "basic 2D game library.",
  "devDependencies": {
    "@types/jsdom": "21.1.7",
    "@types/node": "24.4.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=24.0"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "tools/atlas-parser/atlas-parser.ts",
    "tools/void.ts",
    "!**/tsconfig.tsbuildinfo"
  ],
  "homepage": "https://github.com/oidoid/void",
  "keywords": [
    "game engine",
    "webgl"
  ],
  "license": "AGPL-3.0-only",
  "name": "@oidoid/void",
  "publishConfig": {
    "access": "public"
  },
  "published": "20250824",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oidoid/void.git"
  },
  "scripts": {
    "build": "tsc --build && npm run build:demo -- --minify",
    "build:demo": "tools/void.ts --assets=src/demo/assets --entry=src/demo/index.html --out-dir=dist/demo --out-image=dist/demo/atlas.png --out-json=src/demo/atlas.json",
    "clean": "rm -rf dist",
    "format": "npm run formatter -- --fix",
    "formatter": "biome check --error-on-warnings",
    "preversion": "[ -z \"$(git status -z)\" ] && sed -ri 's%\"published\": \"[0-9]{8}\"%\"published\": \"$(date +%Y%m%d)\"%' package.json",
    "prepublishOnly": "! git symbolic-ref --quiet HEAD || git push --follow-tags origin \"$(git branch --show-current)\"",
    "start": "tsc --build --preserveWatchOutput --watch& npm run build:demo -- --watch& wait",
    "test": "npm run test:format && npm run test:unit && npm run build",
    "test:format": "npm run formatter",
    "test:unit": "sh -c 'node --experimental-test-coverage --test ${@:-$(find -name \\*.test.ts -printf %p\\ )}' --",
    "version": "npm test"
  },
  "type": "module",
  "version": "0.1.0-4"
}
