{
  "name": "@oid/v",
  "exports": {},
  "compilerOptions": {
    "erasableSyntaxOnly": true,

    // Typing.
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Don't transform type-only imports.
    "verbatimModuleSyntax": true,

    "lib": ["deno.ns", "dom", "es2023"]
  },
  "fmt": {
    "jsx.bracketPosition": "sameLine",
    "jsx.multiLineParens": "never",
    "singleBodyPosition": "sameLine",
    "semiColons": false,
    "singleQuote": true,
    "spaceSurroundingProperties": false,
    "trailingCommas": "never",
    "typeLiteral.separatorKind": "comma",
    "useBraces": "preferNone"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.13",
    "@std/testing": "jsr:@std/testing@1.0.14",
    "@std/cli": "jsr:@std/cli@1.0.20",
    "@std/path": "jsr:@std/path@1.1.1"
  },
  // "lint": { "rules": { "exclude": ["no-inferrable-types"] } },
  "lint": { "rules": { "exclude": ["getter-return"] } },
  "tasks": {
    "build": "tools/build",
    "clean": "rm -rf dist",
    "dev": "tools/build --watch",
    "test": "deno task test:types && deno task test:unit && deno lint && deno fmt --check && tools/build",
    "test:unit": "deno test --allow-read=. --allow-write=. --coverage",
    "test:types": "deno check --doc"
  },
  //"workspace": ["bumper", "void"]
}
